{
  "name": "@casa/browser",
  "version": "0.1.0",
  "author": "Casa",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "rollup -c -m",
    "postbuild": "cp package.json dist/@casa/browser/package.json",
    "develop": "watch 'yarn build' lib/.",
    "format": "prettier --write 'lib/**/*.ts'",
    "prepublish": "yarn format && yarn build"
  },
  "files": [
    "dist/**",
    "lib/**"
  ],
  "module": "dist/@casa/browser/index.js",
  "main": "dist/@casa/browser/index.umd.js",
  "jsnext:main": "dist/@casa/browser/index.js",
  "types": "dist/@casa/browser/index.d.ts",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "watch": "^1.0.2"
  }
}
